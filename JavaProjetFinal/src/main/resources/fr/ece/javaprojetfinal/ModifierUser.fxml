<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="560" prefWidth="900"
            xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.ece.javaprojetfinal.ModifierUsercontroller">

    <!-- HEADER -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12"
              style="-fx-padding:12; -fx-background-color: linear-gradient(to right, #4b6cb7, #182848);">

            <Label style="-fx-text-fill: white;">
                <font><Font size="20"/></font>
                Project Manager
            </Label>

            <Region HBox.hgrow="ALWAYS"/>

            <Button fx:id="logoutbtn"
                    text="Déconnexion"
                    style="-fx-background-color: transparent;
                           -fx-text-fill: white;
                           -fx-border-color: rgba(255,255,255,0.2);
                           -fx-border-radius:6; -fx-padding:6 12;">
                <tooltip><Tooltip text="Se déconnecter"/></tooltip>
            </Button>

        </HBox>
    </top>

    <!-- SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="18"
              style="-fx-padding:18; -fx-background-color: linear-gradient(to bottom, #1f3c88, #254a9b); -fx-pref-width:220;">

            <!-- Avatar -->
            <StackPane alignment="CENTER" prefHeight="120">
                <Circle radius="40"
                        style="-fx-fill: linear-gradient(#ffffff44, #ffffff11);
                               -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35),8,0,0,2);" />
                <Label fx:id="usernameField"
                       style="-fx-text-fill: white; -fx-font-weight: bold;"
                       text="Utilisateur"/>
            </StackPane>

            <!-- Menu -->
            <VBox alignment="TOP_CENTER" spacing="8" style="-fx-padding:6;">
                <Button fx:id="projetsbtn" prefWidth="180"
                        text="Projets"
                        style="-fx-background-color: transparent; -fx-text-fill: white;
                               -fx-border-color: rgba(255,255,255,0.12);
                               -fx-border-radius:8; -fx-padding:8 10;"/>

                <Button fx:id="tachesbtn" prefWidth="180"
                        text="Tâches"
                        style="-fx-background-color: transparent; -fx-text-fill: white;
                               -fx-border-color: rgba(255,255,255,0.12);
                               -fx-border-radius:8; -fx-padding:8 10;"/>

                <Button fx:id="utilisateursbtn" prefWidth="180"
                        text="Collaborateurs"
                        style="-fx-background-color: transparent; -fx-text-fill: white;
                               -fx-border-color: rgba(255,255,255,0.12);
                               -fx-border-radius:8; -fx-padding:8 10;"/>

                <Button fx:id="calendrierbtn" prefWidth="180"
                        text="Calendrier"
                        style="-fx-background-color: transparent; -fx-text-fill: white;
                               -fx-border-color: rgba(255,255,255,0.12);
                               -fx-border-radius:8; -fx-padding:8 10;"/>
            </VBox>

            <Region VBox.vgrow="ALWAYS"/>

            <Button prefWidth="180" text="Paramètres"
                    style="-fx-background-radius:8;
                           -fx-background-color: rgba(255,255,255,0.06);
                           -fx-text-fill: white; -fx-padding:8 10;"/>
        </VBox>
    </left>

    <!-- MAIN CONTENT -->
    <center>
        <VBox spacing="10" style="-fx-padding:16; -fx-background-color: #F6F8FF;">
            <children>
                <Label text="Nom" />
                <TextField fx:id="nomField" promptText="Nom" />

                <Label text="Adresse" />
                <TextField fx:id="adresseField" promptText="Adresse" />

                <Label text="Mot de passe" />
                <PasswordField fx:id="passwordField" promptText="Mot de passe" />

                <Label text="Rôle" />
                <ComboBox fx:id="roleCombo" prefWidth="200" />

                <HBox spacing="8" alignment="CENTER_RIGHT">
                    <children>
                        <Button fx:id="retourBtn" text="Retour" />
                        <Button fx:id="annulerBtn" text="Annuler" />
                        <Button fx:id="enregistrerBtn" text="Enregistrer" />
                    </children>
                </HBox>
            </children>
        </VBox>
    </center>

</BorderPane>
