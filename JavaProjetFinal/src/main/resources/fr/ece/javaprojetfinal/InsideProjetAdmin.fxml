<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="514.0" prefWidth="914.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.ece.javaprojetfinal.InsideProjetAdminController">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" style="-fx-padding:12; -fx-background-color: linear-gradient(to right, #4b6cb7, #182848);">
            <children>
                <Label style="-fx-text-fill: white;" text="Project Manager">
                    <font><Font size="20" /></font>
                </Label>

                <Region HBox.hgrow="ALWAYS" />

                <TextField fx:id="projectNameField" editable="false" promptText="Nom du projet" style="-fx-background-color: transparent; -fx-text-fill: white;                                   -fx-border-color: transparent; -fx-pref-width:250;">
                    <font><Font name="System Bold" size="16" /></font>
                </TextField>

                <!-- Buttons for PROJECT (not tasks) -->
                <Button fx:id="modifprojet" prefHeight="29.0" prefWidth="143.0" style="-fx-background-color: rgba(255,255,255,0.15); -fx-text-fill: white;                                -fx-border-radius:6; -fx-background-radius:6; -fx-padding:6 12;" text="Modifier le projet " />

                <Button fx:id="supprprojet" style="-fx-background-color: #C74444; -fx-text-fill: white;                                -fx-border-radius:6; -fx-background-radius:6; -fx-padding:6 12;" text="Supprimer le projet" />

                <Button fx:id="ajoutertache" style="-fx-background-color: #4A9D5F; -fx-text-fill: white;                                -fx-border-radius:6; -fx-background-radius:6; -fx-padding:6 12;                                -fx-font-weight: bold;" text="Ajouter une tâche" />
            </children>
        </HBox>
    </top>

    <!-- Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" spacing="18" style="-fx-padding:18; -fx-background-color: linear-gradient(to bottom, #1f3c88, #254a9b);                      -fx-pref-width:220;">

            <children>
                <StackPane alignment="CENTER" prefHeight="120">
                    <children>
                        <Circle radius="40" style="-fx-fill: linear-gradient(#ffffff44, #ffffff11);                                        -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.35),8,0,0,2);" />
                        <Label fx:id="usernameField" style="-fx-text-fill: white; -fx-font-weight: bold;" text="Utilisateur" />
                    </children>
                </StackPane>

                <!-- Navigation -->
                <VBox alignment="TOP_CENTER" spacing="8" style="-fx-padding:6;">
                    <children>
                        <Button fx:id="projetsbtn" mnemonicParsing="false" prefWidth="180" style="-fx-background-radius:8; -fx-background-color: transparent;                                        -fx-text-fill: white; -fx-border-color: rgba(255,255,255,0.12);                                        -fx-border-radius:8; -fx-padding:8 10;" text="Projets">
                            <font><Font size="14" /></font>
                        </Button>

                        <Button fx:id="tachesbtn" mnemonicParsing="false" prefWidth="180" style="-fx-background-radius:8; -fx-background-color: transparent;                                        -fx-text-fill: white; -fx-border-color: rgba(255,255,255,0.12);                                        -fx-border-radius:8; -fx-padding:8 10;" text="Tâches">
                            <font><Font size="14" /></font>
                        </Button>

                        <Button fx:id="utilisateursbtn" mnemonicParsing="false" prefWidth="180" style="-fx-background-radius:8; -fx-background-color: transparent;                                        -fx-text-fill: white; -fx-border-color: rgba(255,255,255,0.12);                                        -fx-border-radius:8; -fx-padding:8 10;" text="Collaborateurs">
                            <font><Font size="14" /></font>
                        </Button>

                        <Button fx:id="calendrierbtn" mnemonicParsing="false" prefWidth="180" style="-fx-background-radius:8; -fx-background-color: transparent;                                        -fx-text-fill: white; -fx-border-color: rgba(255,255,255,0.12);                                        -fx-border-radius:8; -fx-padding:8 10;" text="Planning">
                            <font><Font size="14" /></font>
                        </Button>
                    </children>
                </VBox>

                <Region VBox.vgrow="ALWAYS" />

                <Button fx:id="logoutbtn" prefWidth="180" style="-fx-background-radius:8; -fx-background-color: #C74444;                                -fx-text-fill: white; -fx-padding:8 10;" text="Déconnexion" />
            </children>
        </VBox>
    </left>

    <!-- CENTER CONTENT -->
    <center>
        <VBox spacing="18" style="-fx-padding:20; -fx-background-color: #F6F8FF;">

            <!-- Title -->
            <Label style="-fx-text-fill: #1f2b59;" text="Tâches du projet">
                <font><Font size="18" /></font>
            </Label>

            <!-- UPDATED TABLE -->
            <TableView fx:id="tasksTable" prefHeight="300" style="-fx-background-color: white; -fx-background-radius:8; -fx-border-radius:8;">

                <columns>

                    <!-- Column 1: Task Name -->
                    <TableColumn fx:id="taskNameColumn" prefWidth="200" text="Tâche" />

                    <!-- Column 2: Date création -->
                    <TableColumn fx:id="creationDateColumn" prefWidth="150" text="Date de création" />

                    <!-- Column 3: Deadline -->
                    <TableColumn fx:id="dueDateColumn" prefWidth="150" text="Date d'échéance" />

                    <!-- Column 4: Responsable -->
                    <TableColumn fx:id="ownerColumn" prefWidth="170" text="Responsable" />

                    <!-- Column 5: Status -->
                    <TableColumn fx:id="statusColumn" prefWidth="140" text="Statut" />

                </columns>
            </TableView>

            <!-- NEW SECTION: Collaborators -->
            <VBox spacing="8">
                <Label style="-fx-text-fill:#1f2b59;" text="Collaborateurs du projet">
                    <font><Font size="16" /></font>
                </Label>

                <ListView fx:id="collaboratorsList" prefHeight="100" style="-fx-background-radius:8; -fx-border-radius:8; -fx-background-color:white;" />
            </VBox>

        </VBox>
    </center>

</BorderPane>
