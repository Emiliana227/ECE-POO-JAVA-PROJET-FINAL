<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="fr.ece.javaprojetfinal.ViewProjectUsercontroller"
      spacing="0">

    <!-- ESPACE POUR BOUTONS WINDOWS -->
    <padding>
        <Insets top="10"/>
    </padding>

    <children>

        <!-- SCROLLPANE POUR RESPONSIVITÃ‰ -->
        <ScrollPane fitToWidth="true"
                    fitToHeight="true"
                    vbarPolicy="AS_NEEDED"
                    hbarPolicy="NEVER"
                    style="-fx-background-color: transparent;"
                    VBox.vgrow="ALWAYS">

            <content>

                <!-- PAGE LARGEUR 1200px -->
                <BorderPane prefWidth="1200" minWidth="1200" maxWidth="1300">

                    <!-- HEADER -->
                    <top>
                        <HBox alignment="CENTER_LEFT"
                              spacing="12"
                              style="-fx-padding:12;
                                     -fx-background-color: linear-gradient(to right, #4b6cb7, #182848);">

                            <children>
                                <Label text="Project Manager" style="-fx-text-fill:white;">
                                    <font><Font size="20"/></font>
                                </Label>

                                <Region HBox.hgrow="ALWAYS"/>

                                <Button fx:id="logoutbtn"
                                        text="DÃ©connexion"
                                        style="-fx-background-color: transparent;
                                               -fx-text-fill:white;
                                               -fx-border-color: rgba(255,255,255,0.2);
                                               -fx-border-radius:6;
                                               -fx-padding:6 12;"/>
                            </children>

                        </HBox>
                    </top>


                    <!-- SIDEBAR -->
                    <left>
                        <VBox alignment="TOP_CENTER"
                              spacing="18"
                              style="-fx-padding:18;
                                     -fx-background-color: linear-gradient(to bottom, #1f3c88, #254a9b);
                                     -fx-pref-width:220;">

                            <children>

                                <!-- AVATAR -->
                                <StackPane alignment="CENTER" prefHeight="120">
                                    <children>
                                        <Circle radius="40"
                                                style="-fx-fill: linear-gradient(#ffffff44,#ffffff11);
                                                       -fx-effect:dropshadow(gaussian, rgba(0,0,0,0.35),8,0,0,2);"/>
                                        <Label fx:id="usernameSpot"
                                               text="Utilisateur"
                                               style="-fx-text-fill:white; -fx-font-weight:bold;"/>
                                    </children>
                                </StackPane>


                                <!-- MENU -->
                                <VBox alignment="TOP_CENTER" spacing="8" style="-fx-padding:6;">

                                    <Button fx:id="projetsbtn" text="Projets" prefWidth="180"
                                            style="-fx-background-color: transparent;
                                                   -fx-text-fill:white;
                                                   -fx-border-color: rgba(255,255,255,0.12);
                                                   -fx-border-radius:8;
                                                   -fx-padding:8 10;"/>

                                    <Button fx:id="tachesbtn" text="TÃ¢ches" prefWidth="180"
                                            style="-fx-background-color: transparent;
                                                   -fx-text-fill:white;
                                                   -fx-border-color: rgba(255,255,255,0.12);
                                                   -fx-border-radius:8;
                                                   -fx-padding:8 10;"/>

                                    <Button fx:id="calendrierbtn" text="Calendrier" prefWidth="180"
                                            style="-fx-background-color: transparent;
                                                   -fx-text-fill:white;
                                                   -fx-border-color: rgba(255,255,255,0.12);
                                                   -fx-border-radius:8;
                                                   -fx-padding:8 10;"/>

                                </VBox>

                                <Region VBox.vgrow="ALWAYS"/>

                                <Button fx:id="parametresbtn" text="ParamÃ¨tres" prefWidth="180"
                                        style="-fx-background-radius:8;
                                               -fx-background-color: rgba(255,255,255,0.06);
                                               -fx-text-fill:white;
                                               -fx-padding:8 10;"/>

                            </children>
                        </VBox>
                    </left>


                    <!-- MAIN CONTENT -->
                    <center>
                        <VBox spacing="18" style="-fx-padding:20; -fx-background-color:#F6F8FF;">

                            <children>

                                <!-- TITLE BAR -->
                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <children>

                                        <Label text="Projets assignÃ©s"
                                               style="-fx-text-fill:#1f2b59;">
                                            <font><Font size="18"/></font>
                                        </Label>

                                        <Region HBox.hgrow="ALWAYS"/>

                                        <TextField fx:id="searchField"
                                                   promptText="Rechercher un projet..."
                                                   style="-fx-pref-width:320;
                                                          -fx-background-radius:8;
                                                          -fx-padding:8;"/>
                                    </children>
                                </HBox>


                                <!-- TABLEAU DES PROJETS -->
                                <TableView fx:id="projectsTable"
                                           prefHeight="450"
                                           style="-fx-background-color:white;
                                                  -fx-background-radius:8;
                                                  -fx-border-radius:8;">

                                    <columns>

                                        <TableColumn fx:id="nameCol" text="Nom" prefWidth="160"/>

                                        <TableColumn fx:id="descCol" text="Description" prefWidth="260"/>

                                        <!-- ðŸ”¥ Colonnes supplÃ©mentaires demandÃ©es -->

                                        <TableColumn fx:id="creationDateCol" text="Date de crÃ©ation" prefWidth="140"/>

                                        <TableColumn fx:id="dueDateCol" text="Date d'Ã©chÃ©ance" prefWidth="140"/>

                                        <TableColumn fx:id="statusCol" text="Statut" prefWidth="120"/>

                                        <TableColumn fx:id="responsableCol" text="Responsable" prefWidth="140"/>

                                        <!-- ACTIONS -->
                                        <TableColumn fx:id="actionsCol" text="Actions" prefWidth="120"/>

                                    </columns>

                                </TableView>

                            </children>

                        </VBox>
                    </center>

                </BorderPane>

            </content>
        </ScrollPane>

    </children>

</VBox>
